<!DOCTYPE html>
<html lang="en">
    <!-- Header -->
    <%- include('../partials/header'); %>
    <body>
        <!-- Navbar -->
        <%- include('../partials/navbar'); %>

        <!-- Content -->
        <div class="container mt-5">
            <h1>Article</h1>
            <a href="/article/create" class="btn btn-primary">Add Article</a>
            <br><br>
            <% if (article.length !== 0) {%>
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <th>Title</th>
                        <th>Body</th>
                        <th>Approved</th>
                        <th>Created At</th>
                        <th>Update At</th>
                        <th>Action</th>
                    </thead>
                    <tbody>
                    <% article.forEach(i => { %>
                        <tr>
                            <td><%= i.title %></td>
                            <td><%= i.body %></td>
                            <td>
                                <% if (i.approved != true) { %>
                                    <i class="bi bi-x-lg" style="color: red;"></i>
                                <% } else { %>
                                    <i class="bi bi-check-lg" style="color: green;"></i>
                                <% } %>
                            </td>
                            <td><%= i.createdAt %></td>
                            <td><%= i.updatedAt %></td>
                            <td>
                                <a href="/article/<%= i.id %>" class="btn btn-primary">
                                    <i class="bi bi-eye-fill"></i>
                                </a>
                                <a href="/article/update/<%= i.id %>" class="btn btn-warning" id="edit-portofolio">
                                    <i class="bi bi-pencil-fill"></i>
                                </a>
                                <button class="btn btn-danger" id="delete-article" data-id="<%= i.id %>">
                                    <i class="bi bi-trash-fill"></i>
                                </button>
                            </td>
                        </tr>
                    <% }) %>
                    </tbody>
                </table>
            <% } else { %>
                <div><p>Belum ada portofolio</p></div>
            <% } %>
        </div>

        <!-- JQuery -->
        <script>
            $(function(){
                $('body').on('click', '#delete-article', function(e){
                    $target = $(e.target);
                    const id = $target.attr('data-id');
                    $.ajax({
                        type:'DELETE',
                        url:'/article/'+id,
                        success: function(response) {
                            alert('Deleting Article');
                            window.location.href='/article';
                        },
                        error: function(err) {
                            console.log(err)
                        }
                    })
                })
            })
        </script>

        <!-- Footer -->
        <%- include('../partials/footer'); %>
    </body>
</html>