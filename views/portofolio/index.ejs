<!DOCTYPE html>
<html lang="en">
    <!-- Header -->
    <%- include('../partials/header'); %>
    <body>
        <!-- Navbar -->
        <%- include('../partials/navbar'); %>

        <!-- Content -->
        <div class="container">
            <h1>Portofolio</h1>
            <a href="/portofolio/create" class="btn btn-primary">Add Portofolio</a>
            <% if (portofolio.length !== 0) {%>
                <table class="table table-striped table-hover">
                    <thead>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Tags</th>
                        <th>Repository</th>
                        <th>Image</th>
                        <th>Action</th>
                    </thead>
                    <tbody>
                    <% portofolio.forEach(i => { %>
                        <tr>
                            <td><%= i.title %></td>
                            <td><%= i.description %></td>
                            <td><%= i.tags %></td>
                            <td><a href="<%= i.repository %>"><%= i.repository %></a></td>
                            <td><img src="<%= i.image %>" alt="" style="max-width: 100px;"></td>
                            <td>
                                <a href="/portofolio/<%= i.id %>" class="btn btn-primary">Lihat</a>
                                <a href="/portofolio/update/<%= i.id %>" class="btn btn-warning" id="edit-portofolio">Edit</a>
                                <button class="btn btn-danger" id="delete-portofolio" data-id="<%= i.id %>">Delete</button>
                            </td>
                        </tr>
                    <% }) %>
                    </tbody>
                </table>
            <% } else { %>
                <div><p>Belum ada portofolio</p></div>
            <% } %>
        </div>

        <!-- JQuery -->
        <script>
            $(function(){
                $('body').on('click', '#delete-portofolio', function(e){
                    $target = $(e.target);
                    const id = $target.attr('data-id');
                    $.ajax({
                        type:'DELETE',
                        url:'/portofolio/'+id,
                        success: function(response) {
                            alert('Deleting Portofolio');
                            window.location.href='/portofolio';
                        },
                        error: function(err) {
                            console.log(err)
                        }
                    })
                })
            })
        </script>

        <!-- Footer -->
        <%- include('../partials/footer'); %>
    </body>
</html>