<!DOCTYPE html>
<html lang="en">
    <!-- Header -->
    <%- include('../partials/header'); %>
    <body class="bg-dark">
        <!-- Content -->
        <div class="container mt-5 text-center card py-3" style="width: 100%; max-width:330px">
            <h1 class="mt-3">Sign Up</h1>
            <br>
            <form action="/register" method="POST">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" name="username" id="username" placeholder="Username" required>
                    <label for="username">Username</label>
                  </div>
                  <div class="form-floating">
                    <input type="password" class="form-control" name="password" id="password" placeholder="Password" required>
                    <label for="password">Password</label>
                  </div>
                  <br>
                  <button type="submit" class="btn btn-lg btn-primary w-100">Sign Up</button>
            </form>
            <br>
            <hr>
            <p>Have an account? <a href="/login" class="text-decoration-none fw-bold">Log in</a></p>
        </div>

        <!-- Footer -->
        <%- include('../partials/footer'); %>
    </body>
</html>